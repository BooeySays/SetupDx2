function __DXTITLE(){
	TIT=$1
	if [ $2 ]; then
		TITLEBG=$2
	else
		TITLEBG=196
	fi
	if [ $3 ]; then
		TITLEFG=$3
	else
		TITLEFG=15
	fi
	clear;
	python3 -c "print('\033c\033[00;01;48;5;' + '$TITLEBG' + 'm\033[38;5;' + '$TITLEFG' + 'm' + ' ' * $COLUMNS + '\r ' + '$TIT' + '\033[m\n')"
	unset TIT TITLEFG TITLEBG
}
