if [ $DX2RC ]; then
	echo -en "\033[01;38;5;15m[ \033[01;38;5;46m✔ \033[01;38;5;15m]\033[m "\$DX2RC"\n"
else
	echo -en "\033[01;38;5;15m[ \033[01;38;5;196m✖ \033[01;38;5;15m]\033[m "\$DX2RC"\n"
fi

# CHECKS FOR .DX2BIN
echo -en "\033[01;38;5;15m[ \033[01;38;5;154m⌛\033[01;38;5;15m]\033[m "\$DX2BIN"\r"
