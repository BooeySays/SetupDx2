if [ $DX2FUNCS ]; then
	echo -en "\033[01;38;5;15m[ \033[01;38;5;46m✔ \033[01;38;5;15m]\033[m "\$DX2FUNCS"\n"
else
	echo -en "\033[01;38;5;15m[ \033[01;38;5;196m✖ \033[01;38;5;15m]\033[m "\$DX2FUNCS"\n"
fi

# CHECKS FOR .DX2BAK
echo -en "\033[01;38;5;15m[ \033[01;38;5;154m⌛\033[01;38;5;15m]\033[m "\$DX2BAK"\r"
if [ $DX2BAK ]; then
	echo -en "\033[01;38;5;15m[ \033[01;38;5;46m✔ \033[01;38;5;15m]\033[m "\$DX2BAK"\n"
