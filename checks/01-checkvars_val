	echo -en "\033[01;38;5;15m[ \033[01;38;5;46m✔ \033[01;38;5;15m]\033[m "\$DX2BIN"\n"
else
	echo -en "\033[01;38;5;15m[ \033[01;38;5;196m✖ \033[01;38;5;15m]\033[m "\$DX2BIN"\n"
fi

# CHECKS FOR .DX2FUNCS
