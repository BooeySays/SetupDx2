# CHECKS FOR .DX2TMP
echo -en "\033[01;38;5;15m[ \033[01;38;5;154m⌛\033[01;38;5;15m]\033[m "\$DX2TMP"\r"
if [ $DX2TMP ]; then
	echo -en "\033[01;38;5;15m[ \033[01;38;5;46m✔ \033[01;38;5;15m]\033[m "\$DX2TMP"\n"
else
	echo -en "\033[01;38;5;15m[ \033[01;38;5;196m✖ \033[01;38;5;15m]\033[m "\$DX2TMP"\n"
fi

# CHECKS FOR .DX2GIT
echo -en "\033[01;38;5;15m[ \033[01;38;5;154m⌛\033[01;38;5;15m]\033[m "\$DX2GIT"\r"
if [ $DX2GIT ]; then
	echo -en "\033[01;38;5;15m[ \033[01;38;5;46m✔ \033[01;38;5;15m]\033[m "\$DX2GIT"\n"
